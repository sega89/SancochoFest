	<%= partial(:'partials/modal-brand') %>
<% end %>

<% content_for :footer do %>
	<% if @current_country_code == "AR" %>
		<script type="text/javascript">
			
			$( document ).ready(function() {

				$( "#modal-brand" ).animate({
				    opacity: 1,
				    top: "50%"
				  }, 1500, function() {
				    $( "#modal-brand" ).delay(5000).fadeOut('slow');
				  });

	            $( 'body' ).click(function(){
	            	$( "#modal-brand" ).hide();
	            })
	            $('#video1').on('play', function (e) {
				    $('.video' ).height('auto');
				    $('html, body').animate({
				        scrollTop: $(".video").offset().top
				    }, 500);
				});
			})
		</script>
	<% end %>
<% end %>	